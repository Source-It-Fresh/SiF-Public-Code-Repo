@attribute [AllowAnonymous]
@namespace SourceItFresh.Components.Shared

<div class="row small text-muted">
    <div class="col-sm-6">
        <dl class="row mb-0">
            <dt class="col-4">
                Date Created:
            </dt>
            <dd class="col-8">
                <label>@DisplayDateCreated</label>
            </dd>
            <dt class="col-4">
                User Created:
            </dt>
            <dd class="col-8">
                ...@DisplayUserCreated...
                @*<partial name="/Areas/Core_Identity/Views/Shared/UserDetailsModalDialog.cshtml" model="@DisplayUserCreated" />*@
            </dd>
        </dl>
    </div>
    <div class="col-sm-6">
        <dl class="row mb-0">
            <dt class="col-4">
                Date Modified:
            </dt>
            <dd class="col-8">
                <label>@DisplayDateModified</label>
            </dd>
            <dt class="col-4">
                User Modified:
            </dt>
            <dd class="col-8">
                ...@DisplayUserModified...
                @*<partial name="/Areas/Core_Identity/Views/Shared/UserDetailsModalDialog.cshtml" model="@DisplayUserModified" />*@
            </dd>
        </dl>
    </div>
</div>

@code
{
    [Parameter] public DateTime? DateCreated { get; set; } = null;
    [Parameter] public string? UserCreated { get; set; } = null;
    [Parameter] public DateTime? DateModified { get; set; } = null;
    [Parameter] public string? UserModified { get; set; } = null;

    private string DisplayDateCreated = String.Empty;
    private string DisplayUserCreated = String.Empty;
    private string DisplayDateModified = String.Empty;
    private string DisplayUserModified = String.Empty;

    protected override void OnInitialized()
    {
        DisplayDateCreated = DateCreated.HasValue ? DateCreated.Value.ToString("MM/dd/yyyy HH:mm:ss") : "--/--/---- --:--:--";
        DisplayUserCreated = String.IsNullOrWhiteSpace(UserCreated) ? "N/A" : UserCreated;
        DisplayDateModified = DateModified.HasValue ? DateModified.Value.ToString("MM/dd/yyyy HH:mm:ss") : "--/--/---- --:--:--";
        DisplayUserModified = String.IsNullOrWhiteSpace(UserModified) ? "N/A" : UserModified;
    }

    //protected override async Task OnParametersSetAsync()
    //{
    //}
}