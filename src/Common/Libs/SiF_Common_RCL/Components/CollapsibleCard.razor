@using System.Net.Http
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.JSInterop

@using MudBlazor
@*@using MudBlazor.ThemeManager*@

@using SourceItFresh.Shared.Common
@using SourceItFresh.Components
@using SourceItFresh.Components.Shared
@*@using SourceItFresh.Areas.Shared.Services*@
@*@using SourceItFresh.Areas.Shared.Services.Interfaces*@

@attribute [AllowAnonymous]
@namespace SourceItFresh.Components.Shared

<MudPaper>
    <MudExpansionPanel Class="mb-2" Expanded="@(!Collapsed)">
        <TitleContent>
            <MudElement Class="d-flex flex-row">
                @if (!string.IsNullOrWhiteSpace(CardHeaderIcon))
                {
                    <MudIcon Class="d-inline-flex pr-1" Icon="@CardHeaderIcon"></MudIcon>
                }
                <MudText Class="d-inline-flex pl-1" Typo="Typo.h6">@CardHeaderTitle</MudText>
            </MudElement>
            @*<MudDivider DividerType="DividerType.Middle" />*@
        </TitleContent>
        <ChildContent>

            <ErrorBoundary>
                <ChildContent>

                    <MudGrid Spacing="2" Justify="Justify.Center" Style="@DialogStyle">
                        <MudItem xs="12">
                            <MudElement Class="@BodyClass">
                                @CardBodyContent
                            </MudElement>
                        </MudItem>

                        @if (ShowFooter)
                        {
                            <MudItem xs="12">
                                @*<MudDivider />*@
                                <MudElement Class="@BodyClass">
                                    @CardFooterContent
                                </MudElement>
                            </MudItem>
                        }
                    </MudGrid>

                </ChildContent>
                <ErrorContent>
                    <ErrorBoundary>
                        <ErrorBoundaryContent />
                    </ErrorBoundary>
                </ErrorContent>
            </ErrorBoundary>

        </ChildContent>
    </MudExpansionPanel>
</MudPaper>