@*@inject IJSRuntime _JSRuntime*@

@attribute [AllowAnonymous]
@*@namespace SourceItFresh*@

@{
    //Layout = "_LayoutSite";
    string Header = _LocalizationCultureService.GetValue("Bar_Header:Information:Consumer");
}

<PageTitle>@Header</PageTitle>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<_AreaNav NavBreadcrumbs="@_navBreadcrumbs" />
<CollapsibleCard Collapsed="false" CardHeaderIcon="fas fa-utensils" CardHeaderTitle="@Header" ShowFooter="false">
    <CardBodyContent>
        <MudGrid>
            <MudItem xs="12" sm="8" md="8">
                <MudGrid>
                    <MudItem md="6">
                        <MudGrid>
                            <MudItem md="12">
                                <MudImage Src="_content/SiF_Common_RCL/Images/baked-sml.png" Alt="Produce something fabulous" Class="rounded-lg" />
                            </MudItem>
                            <MudItem md="12">
                                <MudText Typo="Typo.h4">@_StringLocalizer["Heading001"]</MudText>
                                <MudText Typo="Typo.body2">
                                    @_StringLocalizer["Details001.1"]<br />
                                    @_StringLocalizer["Details001.2"]<br />
                                    @_StringLocalizer["Details001.3"]<br />
                                </MudText>
                            </MudItem>
                        </MudGrid>
                    </MudItem>
                    <MudItem md="6">
                        <MudGrid>
                            <MudItem md="12">
                                <MudText Typo="Typo.h4">@_StringLocalizer["Heading002"]</MudText>
                                <MudText Typo="Typo.body2">
                                    @_StringLocalizer["Details002.1"]<br />
                                    @_StringLocalizer["Details002.2"]<br />
                                    @_StringLocalizer["Details002.3"]<br />
                                </MudText>
                            </MudItem>
                            <MudItem md="12">
                                <MudImage Src="_content/SiF_Common_RCL/Images/products.png" Alt="Make something fabulous" Class="rounded-lg" />
                            </MudItem>
                        </MudGrid>
                    </MudItem>
                </MudGrid>
            </MudItem>
            <MudItem xs="12" sm="4" md="4">
                <MudExpansionPanels>
                    <MudExpansionPanel Text="What do you get?" MaxHeight="150">
                        Source it Fresh is exactly that. Sourcing freshly grown, baked or prepared products from your closest chosen producer. Below, please find explanations for some of the services on offer.
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="Entities" MaxHeight="350">
                        Empty
                    </MudExpansionPanel>
                    <MudExpansionPanel Text="PlaceHolder" MaxHeight="500">
                        ...
                    </MudExpansionPanel>
                </MudExpansionPanels>
            </MudItem>
        </MudGrid>
    </CardBodyContent>
</CollapsibleCard>

@code
