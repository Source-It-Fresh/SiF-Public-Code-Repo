@inject IStringLocalizer<Suppliers> _StringLocalizer
@inject LocalizationCultureService _LocalizationCultureService
@inject NavigationManager _NavigationManager
@*@inject IPPPsService PPPsService*@
@*@inject IJSRuntime _JSRuntime*@

@attribute [AllowAnonymous]
@*@namespace SourceItFresh*@

@{
    //Layout = "_LayoutSite";
    string Header = _LocalizationCultureService.GetValue("Bar_Header:Information:Supplier");
}

<PageTitle>@Header</PageTitle>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<_AreaNav NavBreadcrumbs="@_navBreadcrumbs" />
<CollapsibleCard Collapsed="false" CardHeaderIcon="fas fa-parachute-box" CardHeaderTitle="@Header" ShowFooter="false">
    <CardBodyContent>
        <MudGrid>
            <MudItem xs="12">
                <MudGrid>
                    <MudItem xs="12" md="8">
                        <MudText Typo="Typo.h4">@_StringLocalizer["Heading001"]</MudText>
                        @*
                        <MudText Typo="Typo.body1">
                        How does Source it Fresh help you as a buyer or consumer of fresh products?
                        </MudText>
                        *@
                        <MudText Typo="Typo.body2">
                            @_StringLocalizer["Details001.1"]<br />
                            @_StringLocalizer["Details001.2"]
                        </MudText>
                        <br />
                        <MudText Typo="Typo.body2">
                            @_StringLocalizer["Details001.3"]<br />
                            @_StringLocalizer["Details001.4"]
                        </MudText>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudImage Class="img-fluid rounded-lg p-3 mt-4 mb-2" Src="_content/SiF_Common_RCL/Images/veggarden.jpg" Alt="Make something fabulous" />
                    </MudItem>
                </MudGrid>
            </MudItem>

            <MudItem xs="12">
                <MudGrid>
                    <MudItem xs="12" md="8">
                        <MudText Typo="Typo.h4">@_StringLocalizer["Heading002"]</MudText>
                        <MudText Typo="Typo.body2">
                            @_StringLocalizer["Details002.1"]<br />
                            @_StringLocalizer["Details002.2"]
                        </MudText>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudImage Class="img-fluid rounded-lg p-3 mt-4 mb-2" Src="_content/SiF_Common_RCL/Images/vegtrays.jpg" Alt="Produce something fabulous" />
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    </CardBodyContent>
</CollapsibleCard>

@code
{
    //[CascadingParameter]
    internal List<BreadcrumbItem> _navBreadcrumbs = new List<BreadcrumbItem>();

    protected override async Task OnInitializedAsync()
    {
        AreaNavBreadcrumbsClass areaNavBreadcrumbsClass = new AreaNavBreadcrumbsClass(_LocalizationCultureService);
        _navBreadcrumbs = areaNavBreadcrumbsClass.NavBreadcrumbs;
    }

